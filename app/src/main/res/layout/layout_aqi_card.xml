<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_centerInParent="true"
    android:id="@+id/aqiCard"
    android:backgroundTint="@color/colorAqi"
    app:cardElevation="7sp"
    app:cardCornerRadius="5sp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="3sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:padding="10sp"
            android:text="AQI"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAQIMeasure"
            android:padding="10sp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="aqi measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAQIDesc"
            android:padding="10sp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:text="aqi description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>
